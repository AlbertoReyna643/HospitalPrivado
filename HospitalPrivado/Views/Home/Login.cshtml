@{
    ViewBag.Title = "Iniciar Sesion";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@Styles.Render("~/Content/mystyles/styles.css")

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form class="form-login" action="admin/inicio.cshtml">
            <div class="form-group">
                <img src="../Content/img/iconos/login1.png" class="img-fluid" width="75px">
            </div>
            <div class="form-group">
                <label>Iniciar Sesion</label>
            </div>
            <div class="form-group">
                <label class="control-label" for="emailForm">Correo Electrónico</label>
                <input type="text" class="form-control my-input" placeholder="Email" name="" id="emailForm">
            </div>
            <div class="form-group">
                <label class="control-label" for="passForm">Contraseña:</label>
                <input type="password" class="form-control my-input" placeholder="***************" name="" id="passForm">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" name="name" value="Ingresar" />
            </div>
            <div class="form-group">
                <input type="reset" class="btn btn-danger" name="name" value="Limpiar" />
            </div>
            <div class="form-group">
                <a href="Singin.cshtml" class="badge badge-light" data-target="#exampleModalCenter">@Html.ActionLink("¿Aún no tienes una cuenta?", "Singin")</a>
            </div>
        </form>
    </div>
</div>